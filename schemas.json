{
  "schemas": {
    "version": "1.0.0",
    "form": {
      "message": {
        "example-01": {
          "angular": {
            "schema": ["*"]
          }
        }
      }
    },
    "configure": {
      "default-config": {
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "searchQuery": {
                "type": "string",
                "required": true
              },
              "consumerKey": {
                "type": "string",
                "required": true
              },
              "consumerSecret": {
                "type": "string",
                "required": true
              },
              "accessTokenKey": {
                "type": "string",
                "required": true
              },
              "accessTokenSecret": {
                "type": "string",
                "required": true
              }
            }
          }
        }
      }
    },
    "message": {
      "twitter-action": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "title": "Command",
            "required": true,
            "enum": [
              "start",
              "stop",
              "post",
              "get"
            ]
          },
          "request": {
            "type": "object",
            "title": "Request (for \"get\" and \"post\")",
            "properties": {
              "endpoints": {
                "type": "string",
                "title": "Endpoint",
                "default": "statuses/user_timeline"
              },
              "params": {
                "type": "object",
                "title": "Params for Request",
                "default": {}
              }
            }
          }
        }
      }
    }
  }
}
